{
  "name": "@crowdstrike/glide-core-eslint-plugin",
  "version": "0.0.0",
  "description": "CrowdStrike's Glide Design System ESLint plugin",
  "author": "CrowdStrike UX Team",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/CrowdStrike/glide-core.git",
    "directory": "packages/eslint-plugin"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist/src/*"
  ],
  "type": "module",
  "scripts": {
    "format": "per-env",
    "format:development": "prettier . --write",
    "format:production": "prettier . --check",
    "lint": "per-env",
    "lint:development": "eslint . --fix",
    "lint:production": "eslint .",
    "start": "per-env",
    "start:development": "tsc --outDir dist --watch",
    "start:production": "tsc --outDir dist",
    "test": "per-env",
    "test:development": "vitest --config ./vitest.config.ts",
    "test:production": "vitest run --config ./vitest.config.ts"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^8.56.0",
    "@types/eslint": "^8.56.7",
    "@typescript-eslint/rule-tester": "^7.6.0",
    "@typescript-eslint/types": "^7.6.0",
    "@typescript-eslint/utils": "^7.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "globals": "^13.24.0",
    "per-env": "^1.0.2",
    "prettier": "3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">= 20",
    "pnpm": ">= 8"
  },
  "volta": {
    "node": "20.12.2",
    "pnpm": "9.0.6"
  }
}
