{
  "name": "@crowdstrike/glide-core-components",
  "version": "0.1.3",
  "description": "CrowdStrike's Glide Design System components package for providing web components",
  "author": "CrowdStrike UX Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrowdStrike/glide-core.git",
    "directory": "packages/components"
  },
  "type": "module",
  "files": [
    "dist",
    "!dist/src",
    "!dist/storybook",
    "!dist/*.test.js",
    "!dist/*.stories.js"
  ],
  "exports": {
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "start": "per-env",
    "start:development": "npm-run-all --print-name start:development:*",
    "start:development:storybook": "storybook dev --config-dir .storybook --disable-telemetry --port 6006",
    "start:development:typescript": "tsc --declaration --sourceMap --outDir dist --watch",
    "start:production": "npm-run-all --parallel --aggregate-output --print-label start:production:*",
    "start:production:storybook": "storybook build --config-dir .storybook --disable-telemetry --output-dir ./dist/storybook",
    "start:production:typescript": "node ./esbuild.js && tsc --emitDeclarationOnly --declaration --outDir ./dist --rootDir .",
    "start:production:typescript:comment": "https://github.com/evanw/esbuild/issues/95#issuecomment-626069971",
    "format": "per-env",
    "format:development": "prettier . --write && stylelint '**/*.styles.ts' --custom-syntax postcss-lit --fix",
    "format:production": "prettier . --check && stylelint '**/*.styles.ts' --custom-syntax postcss-lit --no-color",
    "lint": "per-env",
    "lint:development": "npm-run-all --print-name lint:development:**",
    "lint:development:eslint": "eslint . --fix",
    "lint:development:lit-analyzer": "lit-analyzer **/*.ts",
    "lint:production": "npm-run-all --parallel --aggregate-output --print-label lint:production:**",
    "lint:production:eslint": "eslint .",
    "lint:production:lit-analyzer": "lit-analyzer **/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "per-env",
    "test:development": "npm-run-all --parallel test:development:**",
    "test:development:serve": "npx http-server dist/coverage/lcov-report --silent",
    "test:development:web-test-runner": "web-test-runner --watch",
    "test:production": "web-test-runner"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.4"
  },
  "devDependencies": {
    "@crowdstrike/glide-core-styles": "workspace:*",
    "@eslint/js": "^8.56.0",
    "@open-wc/testing": "^3.2.2",
    "@storybook/addon-essentials": "^8.0.4",
    "@storybook/addon-links": "^8.0.4",
    "@storybook/blocks": "^8.0.4",
    "@storybook/web-components-vite": "^8.0.4",
    "@storybook/web-components": "^8.0.4",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@web/dev-server-esbuild": "^0.3.6",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner": "^0.18.0",
    "chalk": "^5.3.0",
    "esbuild": "^0.19.12",
    "esbuild-plugin-minify-html-literals": "^1.0.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit-a11y": "^4.1.2",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-sort-class-members": "^1.20.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint": "^8.56.0",
    "globals": "^13.24.0",
    "globby": "^14.0.0",
    "http-server": "^14.1.1",
    "lint-staged": "^14.0.1",
    "lit-analyzer": "^2.0.3",
    "lit": "^3.1.2",
    "lit-html": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "postcss": "^8.4.38",
    "postcss-lit": "^1.1.1",
    "prettier": "3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sinon": "^17.0.1",
    "storybook": "^8.0.4",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "stylelint-use-logical": "^2.1.2",
    "stylelint-use-nesting": "^5.1.1",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "lit": "^3.1.0"
  },
  "engines": {
    "node": "^20.9.0",
    "pnpm": "^8.10.5"
  },
  "volta": {
    "node": "20.9.0",
    "pnpm": "8.10.5"
  }
}
