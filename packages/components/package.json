{
  "name": "@crowdstrike/glide-core-components",
  "version": "0.2.0",
  "description": "CrowdStrike's Glide Design System components package for providing web components",
  "author": "CrowdStrike UX Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrowdStrike/glide-core.git",
    "directory": "packages/components"
  },
  "type": "module",
  "files": [
    "dist",
    "!dist/icons/storybook.*",
    "!dist/src",
    "!dist/storybook",
    "!dist/*.test.js",
    "!dist/*.stories.js"
  ],
  "scripts": {
    "start": "per-env",
    "start:development": "storybook dev --config-dir .storybook --disable-telemetry --port 6006",
    "start:production": "npm-run-all --parallel --aggregate-output --print-label start:production:*",
    "start:production:components": "node ./esbuild.js && tsc --emitDeclarationOnly --declaration --outDir ./dist",
    "start:production:components:comment": "https://github.com/evanw/esbuild/issues/95#issuecomment-626069971",
    "start:production:storybook": "storybook build --config-dir .storybook --disable-telemetry --output-dir ./dist/storybook",
    "format": "per-env",
    "format:development": "prettier . --write && stylelint '**/*.styles.ts' --custom-syntax postcss-lit --fix",
    "format:production": "prettier . --check && stylelint '**/*.styles.ts' --custom-syntax postcss-lit --no-color",
    "lint": "per-env",
    "lint:development": "npm-run-all --print-name lint:development:*",
    "lint:development:eslint": "eslint . --fix",
    "lint:development:lit-analyzer": "lit-analyzer **/*.ts",
    "lint:production": "npm-run-all --parallel --aggregate-output --print-label lint:production:*",
    "lint:production:eslint": "eslint .",
    "lint:production:lit-analyzer": "lit-analyzer **/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "per-env",
    "test:development": "npm-run-all --parallel test:development:*",
    "test:development:serve": "npx http-server dist/coverage/lcov-report --silent",
    "test:development:web-test-runner": "web-test-runner --watch",
    "test:production": "web-test-runner"
  },
  "engines": {
    "node": ">= 20",
    "pnpm": ">= 8"
  },
  "volta": {
    "node": "20.12.2",
    "pnpm": "9.0.6"
  },
  "exports": {
    "./accordion.js": {
      "import": "./dist/accordion.js",
      "types": "./dist/accordion.d.ts"
    },
    "./button-group.js": {
      "import": "./dist/button-group.js",
      "types": "./dist/button-group.d.ts"
    },
    "./button-group.button.js": {
      "import": "./dist/button-group.button.js",
      "types": "./dist/button-group.button.d.ts"
    },
    "./button.js": {
      "import": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./checkbox.js": {
      "import": "./dist/checkbox.js",
      "types": "./dist/checkbox.d.ts"
    },
    "./drawer.js": {
      "import": "./dist/drawer.js",
      "types": "./dist/drawer.d.ts"
    },
    "./dropdown.js": {
      "import": "./dist/dropdown.js",
      "types": "./dist/dropdown.d.ts"
    },
    "./dropdown.option.js": {
      "import": "./dist/dropdown.option.js",
      "types": "./dist/dropdown.option.d.ts"
    },
    "./icon-button.js": {
      "import": "./dist/icon-button.js",
      "types": "./dist/icon-button.d.ts"
    },
    "./menu.js": {
      "import": "./dist/menu.js",
      "types": "./dist/menu.d.ts"
    },
    "./menu.button.js": {
      "import": "./dist/menu.button.js",
      "types": "./dist/menu.button.d.ts"
    },
    "./menu.link.js": {
      "import": "./dist/menu.link.js",
      "types": "./dist/menu.link.d.ts"
    },    
    "./tag.js": {
      "import": "./dist/tag.js",
      "types": "./dist/tag.d.ts"  
    },    
    "./tab.js": {
      "import": "./dist/tab.js",
      "types": "./dist/tab.d.ts"
    },
    "./tab.group.js": {
      "import": "./dist/tab.group.js",
      "types": "./dist/tab.group.d.ts"
    },
    "./tab.panel.js": {
      "import": "./dist/tab.panel.js",
      "types": "./dist/tab.panel.d.ts"
    },
    "./toggle.js": {
      "import": "./dist/toggle.js",
      "types": "./dist/toggle.d.ts"
    },
    "./tooltip.js": {
      "import": "./dist/tooltip.js",
      "types": "./dist/tooltip.d.ts"
    },
    "./tree.js": {
      "import": "./dist/tree.js",
      "types": "./dist/tree.d.ts"
    },
    "./tree.item.js": {
      "import": "./dist/tree.item.js",
      "types": "./dist/tree.item.d.ts"
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.4",
    "ow": "^1.1.1"
  },
  "devDependencies": {
    "@crowdstrike/glide-core-eslint-plugin": "workspace:*",
    "@crowdstrike/glide-core-styles": "workspace:*",
    "@eslint/js": "^8.56.0",
    "@open-wc/testing": "^3.2.2",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/blocks": "^8.0.9",
    "@storybook/core-events": "^8.0.9",
    "@storybook/preview-api": "^8.0.9",
    "@storybook/web-components": "^8.0.9",
    "@storybook/web-components-vite": "^8.0.9",
    "@stylistic/eslint-plugin": "^1.7.0",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@web/dev-server-esbuild": "^0.3.6",
    "@web/dev-server-rollup": "^0.6.1",
    "@web/test-runner": "^0.18.0",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "chalk": "^5.3.0",
    "esbuild": "^0.19.12",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.11.0",
    "eslint-plugin-lit-a11y": "^4.1.2",
    "eslint-plugin-sort-class-members": "^1.20.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unicorn": "^50.0.1",
    "globals": "^13.24.0",
    "globby": "^14.0.0",
    "http-server": "^14.1.1",
    "lint-staged": "^14.0.1",
    "lit": "^3.1.2",
    "lit-analyzer": "^2.0.3",
    "lit-html": "^3.1.2",
    "minify-literals": "^1.0.10",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "postcss": "^8.4.38",
    "postcss-lit": "^1.1.1",
    "prettier": "3.1.0",
    "sinon": "^17.0.1",
    "storybook": "^8.0.9",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "stylelint-use-logical": "^2.1.2",
    "stylelint-use-nesting": "^5.1.1",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "lit": "^3.1.0"
  }
}
